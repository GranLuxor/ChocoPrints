<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Menu"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorBotonesMenu"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/info"
            style="@style/botones"
            android:src="@drawable/icono_info" />

        <Space
            style="@style/espacio"/>

        <ImageButton
            android:id="@+id/carrito"
            style="@style/botones"
            android:src="@drawable/icono_carrito" />

        <Space
            style="@style/espacio"/>

        <ImageButton
            android:id="@+id/chat"
            style="@style/botones"
            android:src="@drawable/icono_chat" />
    </LinearLayout>

</FrameLayout>